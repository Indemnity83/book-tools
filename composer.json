{
    "name": "indemnity83/book-tools",
    "version": "0.0.2",
    "description": "Librarian CLI: A simple tool to organize and shelve audiobooks from import folders into a structured library.",
    "keywords": [
        "audiobooks",
        "cli",
        "console",
        "library",
        "organizer",
        "shelving",
        "librarian"
    ],
    "homepage": "https://github.com/indemnity83/book-tools",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/indemnity83/book-tools/issues",
        "source": "https://github.com/indemnity83/book-tools"
    },
    "authors": [
        {
            "name": "Kyle Klaus",
            "email": "indemnity83@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "laravel-zero/framework": "^12.0.0",
        "laravel-zero/phar-updater": "^1.4"
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.25",
        "laravel/pint": "^1.18.3",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.7.1",
        "ramsey/conventional-commits": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "builds/librarian"
    ]
}